# Database
MONGO_URI=

# Client Origins (comma-separated)
# Example:
# - Local: http://localhost:5173,http://localhost:300
# - Dev: https://dev.dn03fv11bz1ey.amplifyapp.com,https://dev.dg4uqajhampr9.amplifyapp.com
# - Prod: https://mesh-spire-core.vercel.app,https://meshspire-landing.vercel.app
CLIENT_ORIGINS=http://localhost:5173,http://localhost:3000

# OAuth/Frontend Redirect Target
# Set to the exact frontend host for redirects after auth
FRONTEND_URL=http://localhost:5173

# JWT Secrets
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# Token Expiration
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# Google OAuth
GOOGLE_CLIENT_ID=<your_google_client_id>
GOOGLE_CLIENT_SECRET=<your_google_client_secret>
GOOGLE_CALLBACK_URL=http://localhost:8000/api/v0/user/auth/google/callback
